<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/create_class_cl">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:background="?android:attr/listDivider"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/classroomTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/classroom_information"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/className_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/type_in_classroom_name_here"
            android:inputType="text" tools:targetApi="o" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:background="?android:attr/listDivider"
            android:visibility="invisible" />


        <Button
            android:id="@+id/creat_class_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="end"
            android:text="Create Class"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>